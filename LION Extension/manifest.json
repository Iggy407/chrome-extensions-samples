{
    "manifest_version": 3,
    "name": "XLS Icon Detector",
    "version": "1.0",
    "description": "Detects the XLS icon and displays a popup.",
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "run_at": "document_end"
      }
    ],
    "background": {
      "service_worker": "background.js"
    }
  }